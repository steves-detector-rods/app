{
	"compilerOptions": {
		"target": "es2020",
		"baseUrl": "./",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"removeComments": true,
		"sourceMap": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"global.d.ts",
		"nodeJs.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.d.ts",
		"next.config.js",
		".next/types/**/*.ts",
		"/public/rolling-landscape.png"
	],
	"exclude": ["node_modules", "**/*.js"]
}
